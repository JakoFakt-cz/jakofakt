{
  "name": "jakofakt",
  "version": "1.0.0-SNAPSHOT",
  "description": "Centralized mono-repo hosting the API and web clients for seamless development and deployment.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "run-concurrently dev"
  },
  "concurrentTasks": {
    "dev": {
      "subTasks": [
        {
          "workingDirectory": "./frontend",
          "command": "bun dev",
          "name": "Frontend"
        },
        {
          "workingDirectory": "./backend",
          "command": "bun start:dev",
          "name": "Backend"
        }
      ]
    }
  },
  "author": "JakoFakt Development",
  "license": "AGPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JakoFakt-cz/jakofakt.git"
  },
  "bugs": {
    "url": "https://github.com/JakoFakt-cz/jakofakt/issues"
  },
  "homepage": "https://github.com/JakoFakt-cz/jakofakt#readme",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "turbo": "^2.5.8"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "dependencies": {
    "@gnoesiboe/run-concurrently": "^3.0.3",
    "run-concurrently": "^1.0.0"
  },
  "packageManager": "bun@1.2.0"
}
